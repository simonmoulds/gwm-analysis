import os

os.environ["PYTHONPATH"] += os.pathsep + "/usr/lib/grass78/etc/python"

# configfile: config/config.yml

rule all:
    input:
        'results/done/populate_grass_database.done'


rule populate_grass_database:
    output:
        touch('results/done/populate_grass_database.done')
    conda:
        'envs/conda_environment_grass.yml'
    script:
        "scripts/grass-define-regions.py"
